# Make various utils do color
export CLICOLOR=true

# Editor
export EDITOR=vim

# Larger bash history
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE

# Ignore duplicate commands and whitespace
export HISTCONTROL=ignoreboth

# Ignore some commands in the history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date"

# Prefer us english and utf-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Enable colored grep output
export GREP_OPTIONS='--color=auto'

# Common less options
export LESS=-Mi

# Java Stuff
export MAVEN_OPTS="-Xmx1024m -Dmaven.wagon.http.ssl.insecure=true -Dmaven.wagon.http.ssl.allowall=true"
export JAVA_HOME="$(/usr/libexec/java_home)"

# Assuming groovy is installed from brew
export GROOVY_HOME=/usr/local/opt/groovy/libexec

# Docker config
export DOCKER_HOST=tcp://192.168.33.10:2375

# NodeJS Stuff (Installed from Brew)
export NVM_DIR=~/.nvm
